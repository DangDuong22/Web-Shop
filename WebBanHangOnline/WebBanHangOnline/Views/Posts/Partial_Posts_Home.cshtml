@model IEnumerable<WebBanHangOnline.Models.EF.Posts>
<section class="testimonial__section section--padding pt-0">
    <div class="container-fluid">
        @if (Model != null && Model.Any())
        {
            <div class="section__heading text-center mb-40">
                <h2 class="section__heading--maintitle">Đại diện thương hiệu</h2>
            </div>
            <div class="testimonial__section--inner testimonial__swiper--activation swiper">
                <div class="swiper-wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide">
                            <div class="testimonial__items text-center">
                                <div class="testimonial__items--thumbnail">
                                    <img class="testimonial__items--thumbnail__img border-radius-50" src="@item.Image" alt="@item.Title" style="width:80px; height:80px">
                                </div>
                                <div class="testimonial__items--content">
                                    @if (item.Title.Length < 20)
                                    {
                                        <h3 class="testimonial__items--title">@item.Title</h3>
                                    }
                                    else
                                    {

                                        <h3 class="testimonial__items--title">@item.Title.Substring(0, 20) ...</h3>
                                    }
                                    @if (item.Description.Length < 30)
                                    {
                                        <span class="testimonial__items--subtitle">@item.Description</span>
                                    }
                                    else
                                    {

                                        <span class="testimonial__items--subtitle">@item.Description.Substring(0, 30) ...</span>
                                    }
                                    @if (item.Detail.Length < 150)
                                    {
                                        <p class="testimonial__items--desc">@Html.Raw(item.Detail)</p>
                                    }
                                    else
                                    {

                                        <p class="testimonial__items--desc">@Html.Raw(item.Detail )</p>
                                    }


                                    <ul class="rating testimonial__rating d-flex justify-content-center">
