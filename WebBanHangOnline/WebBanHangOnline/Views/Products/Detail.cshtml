@model WebBanHangOnline.Models.EF.Product
@using WebBanHangOnline.Models
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoDescription = Model.SeoDescription ?? Model.Title;
    ViewBag.SeoKeyWord = Model.SeoKeywords ?? Model.Title;
    ApplicationDbContext db = new ApplicationDbContext();
    var buyview = db.OrderDetails.Where(a=>a.ProductId == Model.Id).Count();
    var product = db.Products.ToList();
}<!-- End header area -->

<main class="main__content_wrapper">

    <!-- Start breadcrumb section -->
    <section class="breadcrumb__section breadcrumb__bg">
        <div class="container">
            <div class="row row-cols-1">
                <div class="col">
                    <div class="breadcrumb__content text-center">
                        <h1 class="breadcrumb__content--title text-white mb-25">Product Details</h1>
                        <ul class="breadcrumb__content--menu d-flex justify-content-center">
                            <li class="breadcrumb__content--menu__items"><a class="text-white" href="/">Trang chủ</a></li>
                            <li class="breadcrumb__content--menu__items"><span class="text-white"><a class="text-white" href="/danh-muc-san-pham/@Model.ProductCategory.Alias-@Model.ProductCategoryId" ">@Model.ProductCategory.Title</a></span></li>
                            <li class="breadcrumb__content--menu__items"><span class="text-white">@Model.Title</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End breadcrumb section -->
    <!-- Start product details section -->
    <section class="product__details--section section--padding">
        <div class="container">
            <div class="row row-cols-lg-2 row-cols-md-2">
                <div class="col">
                    @if (Model.ProductImage != null && Model.ProductImage.Any())
                    {
                        <div class="product__details--media">
                            <div class="product__media--preview  swiper">
                                <div class="swiper-wrapper">
                                    <!-- Img đại diện -->
                                    @foreach (var item in Model.ProductImage)
                                    {
                                        if (item.IsDefault)
                                        {
                                            <div class="swiper-slide">
                                                <div class="product__media--preview__items">
                                                    <a class="product__media--preview__items--link glightbox" data-gallery="@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" href="@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image"><img class="product__media--preview__items--img" src="@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" alt="@Model.Title"></a>
                                                    <div class="product__media--view__icon">
                                                        <a class="product__media--view__icon--link glightbox" href="@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" data-gallery="@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image">
